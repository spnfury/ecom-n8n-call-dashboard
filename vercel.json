{
    "builds": [
        {
            "src": "call-dashboard-app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/shopify/auth",
            "dest": "/api/shopify/auth.js"
        },
        {
            "src": "/api/shopify/callback",
            "dest": "/api/shopify/callback.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "/call-dashboard-app/$1"
        }
    ]
}