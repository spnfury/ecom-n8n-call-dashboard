{
    "builds": [
        {
            "src": "call-dashboard-app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/call-dashboard-app/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/trigger-calls",
            "schedule": "* * * * *"
        }
    ]
}